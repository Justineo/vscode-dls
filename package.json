{
  "name": "vscode-dls",
  "displayName": "Baidu DLS",
  "description": "Baidu DSL tooling for VS Code.",
  "version": "2.3.0",
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:less",
    "onLanguage:vue"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Justineo/vscode-dls.git"
  },
  "main": "./out/main.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.20.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.14.21",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "less-plugin-dls": "^9.2.0",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "publisher": "justice360",
  "contributes": {
    "configuration": [
      {
        "title": "Baidu DLS",
        "properties": {
          "DLS.showComponentTokens": {
            "type": "boolean",
            "default": false,
            "description": "Show component level design tokens during auto completion."
          }
        }
      }
    ]
  }
}
