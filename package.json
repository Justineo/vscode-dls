{
  "name": "vscode-dls",
  "displayName": "Baidu DLS",
  "description": "Baidu DSL tooling for VS Code.",
  "version": "0.34.1",
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:less"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Justineo/vscode-dls.git"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch",
    "test-compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "less-plugin-dls": "^1.0.0-alpha.26",
    "ts-loader": "^6.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.37",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.11"
  },
  "publisher": "justice360",
  "contributes": {
    "configuration": [
      {
        "title": "Baidu DLS",
        "properties": {
          "DLS.showComponentTokens": {
            "type": "boolean",
            "default": false,
            "description": "Show component level design tokens during auto completion."
          }
        }
      }
    ]
  }
}
